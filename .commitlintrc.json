{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "perf",
        "revert",
        "ci",
        "test",
        "refactor",
        "build",
        "style",
        "chore"
      ]
    ],
    "type-case": [0]
  }
}
