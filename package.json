  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev --filter=editor",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "stylelint": "turbo run stylelint",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
